{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}Liste des types de batteries
{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Liste des types de batteries</h1>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col">Référence</th>
                            <th scope="col">Capacité (W)</th>
                            <th scope="col">Pays</th>
                            <th scope="col">Modifier</th>
                            <th scope="col">Supprimer</th> <!-- Colonne pour la suppression -->
                        </tr>
                    </thead>
                    <tbody>
                        {% for typeBatterie in typeBatteries %}
                        <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                            <td>{{ typeBatterie.reference | capitalize }}</td>
                            <td>{{ typeBatterie.capacite }}</td>
                            <td>{{ typeBatterie.pays | capitalize }}</td>
                            <td>
                                <a href="{{ path('app_modifier_typebatterie', {'id': typeBatterie.id}) }}">
                                    <i class="bi bi-pen-fill text-dark"></i>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('app_supprimer_typebatterie', {'id': typeBatterie.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer ce type de batterie ?');">
                                    <i class="bi bi-trash-fill text-danger"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
